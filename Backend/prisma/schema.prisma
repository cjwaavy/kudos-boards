generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Board {
  id Int @id @default(autoincrement())
  title String
  category Category @default(NONE)
  coverImg String
  author String?
  cards Card[]
}

enum Category {
  NONE
  CELEBRATION
  THANK_YOU
  INSPIRATION
}

model Card {
  id Int @id @default(autoincrement())
  title String
  description String
  gifUrl String
  owner String?
  pinned Boolean
  comments Comment[]

  boardId Int
  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade) // make inherit
}

model Comment {
  id Int @id @default(autoincrement())
  author String
  messageBody String?
  gifUrl String?

  cardId Int
  card Card @relation(fields: [cardId], references: [id])
}
